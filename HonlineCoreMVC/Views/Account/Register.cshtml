<script src="~/js/AccountControllerValidations.js"></script>

@model RegisterViewModel
@using HonlineCoreMVC.Common.Utility
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

@if (!User.IsInRole(Consts.CustomerEndUser))
{
    <div class="row">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" onsubmit="return ValidateRegistertion()" name="registerForm">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="FirstName" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="LastName" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="LastName" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Taz" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Taz" class="form-control" name="taz" type="number" />
                    </div>
                </div>
                <span asp-validation-for="Taz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="BirthDate" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="BirthDate" class="form-control" type="date"/>                     
                    </div>
                </div>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="LoanAmount" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="LoanAmount" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="LoanAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="PeriodInMonths" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="PeriodInMonths" class="form-control" type="number" />
                    </div>
                </div>
                <span asp-validation-for="PeriodInMonths" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Email" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Password" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Password" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="ConfirmPassword" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(Consts.AdminUser))
            {
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="isAdmin" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="isAdmin" type="checkbox" />
                        </div>
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-4">
                        @if (User.IsInRole(Consts.AdminUser))
                        {
                            <button type="submit" class="btn btn-success form-control">Add User</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success form-control">Register</button>
                        }
                    </div>
                </div>
            </div>

        </form>
    </div>
}
else
{
    <div class="form-border">
        <span class="text-danger">You are already registered</span>
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
